import { Palette, Typography, Icons } from "styling.slint";

export component FocusBorder inherits Rectangle {
    in property <bool> has-focus;

    background: Palette.cup-accent-tertiary;
    opacity: 0;

    animate opacity { duration: 150ms; }

    states [
        focused when root.has-focus : {
            opacity: 1;
        }
     ]
}

export component MenuBorder inherits Rectangle {
    drop-shadow-blur: 22px;
    drop-shadow-color: #00000066;
    drop-shadow-offset-y: 0.5px;
    background: Palette.background;
    border-radius: 6px;

    Rectangle {
        width: 100%;
        height: 100%;
        border-radius: parent.border-radius;
        background: Palette.background;

        @children
    }

    Rectangle {
        width: 100%;
        height: 100%;
        border-radius: parent.border-radius;
        border-width: 1px;
        border-color: Palette.cup-popup-border;
    }
}

export component ListItem {
    callback clicked <=> i-touch-area.clicked;
    callback pointer-event <=> i-touch-area.pointer-event;

    in property <bool> selected;
    in property <string> text <=> i-text.text;
    out property <length> mouse-x <=> i-touch-area.mouse-x;
    out property <length> mouse-y <=> i-touch-area.mouse-y;

    min-width: i-layout.min-width;
    min-height: max(22px, i-layout.min-height);
    vertical-stretch: 0;
    horizontal-stretch: 1;

    i-background := Rectangle {
        background: transparent;
        border-radius: 5px;

        i-layout := HorizontalLayout {
            padding-left: 8px;
            padding-right: 8px;
            spacing: 4px;

            i-icon := Image {
                image-fit: contain;
                source: Icons.check-mark;
                colorize: Palette.cup-forground;
                visible: root.selected;
                width: 10px;
            }

            i-text := Text {
                color: Palette.cup-forground;
                font-size: Typography.body.font-size;
                font-weight: Typography.body.font-weight;
                vertical-alignment: center;
                horizontal-alignment: left;
                overflow: elide;
            }
        }
    }

    i-touch-area := TouchArea {}

    states [
        hover when i-touch-area.has-hover : {
            i-background.background: Palette.cup-accent;
            i-text.color: Palette.cup-on-surface;
            i-icon.colorize: Palette.cup-on-surface;
        }
    ]
}
